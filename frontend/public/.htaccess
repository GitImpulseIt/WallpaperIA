# Configuration Apache pour WallpaperAI Landing Page
# Redirection automatique de la langue avec index.php

# Activer le module de réécriture
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Si l'utilisateur accède à la racine, utiliser index.php pour détection de langue
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^ index.php [L]

    # Si le fichier ou dossier existe, le servir directement (fichiers statiques)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Pour les URLs des langues (/en, /fr, etc.), servir les fichiers HTML générés
    RewriteRule ^(en|fr|es|pt|it|de|ru)/?$ $1/index.html [L]
    RewriteRule ^(en|fr|es|pt|it|de|ru)/(.*)$ $1/$2 [L]
</IfModule>

# Désactiver MultiViews pour éviter les conflits
Options -MultiViews

# Configuration du cache pour les assets statiques
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 month"

    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
</IfModule>

# Compression gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Headers de sécurité
<IfModule mod_headers.c>
    # Protection XSS
    Header set X-XSS-Protection "1; mode=block"

    # Prévention du clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Prévention du MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Référrer policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Configuration des types MIME
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType application/javascript .js
    AddType text/css .css
</IfModule>

# Pages d'erreur personnalisées (optionnel)
